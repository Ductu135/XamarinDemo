<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListContact.View.ListContact">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="Images/plus.png" Clicked="ToolbarItem_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Contacts}"
                      IsRefreshing="False"
                      SelectedItem="{Binding SelectContact, Mode=TwoWay}"
                      ItemSelected="contactList_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" >
                            <TextCell.ContextActions>
                                <MenuItem Text="Call" CommandParameter="{Binding .}"/>
                                <MenuItem Text="Delete" IsDestructive="True" CommandParameter="{Binding .}"/>
                            </TextCell.ContextActions>
                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>